{% extends 'base.html.twig' %}

{% block title %}Quiz : {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 800px;">
    <h2 class="text-center mb-4">üìù {{ quiz.title }}</h2>

    <form method="post">
        {% for question in quiz.questions %}
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Question {{ loop.index }}</h5>
                </div>
                <div class="card-body">
                    <p class="lead fw-bold">{{ question.question|markdown_to_html }}</p>
                    
                    <div class="list-group">
                        {% for option in question.options %}
                            <label class="list-group-item list-group-item-action">
                                <input class="form-check-input me-1" 
                                       type="radio" 
                                       name="answers[{{ loop.parent.loop.index0 }}]" 
                                       value="{{ loop.index0 }}" 
                                       required>
                                {{ option }}
                            </label><br>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="text-center mb-5">
            <button type="submit" class="btn btn-primary btn-lg px-5">‚úÖ Valider mes r√©ponses</button>
            <a href="{{ path('student_course_show', {'id': quiz.course.id}) }}" class="btn btn-link text-muted">Annuler</a>
        </div>
    </form>
</div>
{% endblock %}