{% extends 'base.html.twig' %}

{% block title %}Modifier le cours : {{ course.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h1 class="h3 mb-0">‚úèÔ∏è Modifier le cours</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        
                        {{ form_errors(form) }}

                        <div class="mb-4">
                            {{ form_row(form.title) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.pdfFile) }}
                            
                            {% if course.pdfFilename %}
                                <div class="card mb-4" style="height: 850px;">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <span>üìÑ Support PDF</span>
                                        <a href="{{ asset('uploads/courses/' ~ course.pdfFilename) }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                            Ouvrir dans un nouvel onglet
                                        </a>
                                    </div>
                                    <div class="card-body p-0 h-100"  style="--bs-aspect-ratio: 140%;">
                                        <iframe src="{{ asset('uploads/courses/' ~ course.pdfFilename) }}"  allowfullscreen style="border:none; min-height: 800px; min-width: 1150px">
                                        </iframe>
                                    </div>
                                </div>
                            {% endif %}
                            
                            {{ form_widget(form.pdfFile) }}
                            <div class="form-text text-muted">
                                Laissez vide si vous ne voulez pas changer le fichier PDF.
                            </div>
                            {{ form_errors(form.pdfFile) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.videoFile) }}
                            
                            {% if course.videoFilename %}
                                <div class="alert alert-info d-flex align-items-center mt-2">
                                    <span class="me-3">üé• <strong>Vid√©o actuelle :</strong></span>
                                    <video controls style="height: 100px; border-radius: 5px;">
                                        <source src="{{ asset('uploads/courses/' ~ course.videoFilename) }}" type="video/mp4">
                                    </video>
                                    <span class="ms-3 text-muted fst-italic small">
                                        (Laissez le champ ci-dessous vide pour conserver cette vid√©o)
                                    </span>
                                </div>
                            {% endif %}

                            {{ form_widget(form.videoFile) }}
                            {{ form_errors(form.videoFile) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.description) }}
                        </div>

                        <div class="mb-4 p-3 bg-light rounded border">
                            {{ form_row(form.generate_description) }}
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="{{ path('admin_course_index') }}" class="btn btn-outline-secondary">
                                ‚Üê Retour √† la liste
                            </a>
                            
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}